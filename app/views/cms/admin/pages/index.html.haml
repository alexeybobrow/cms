%h1
  = t('admin.pages.title')
= link_to t('admin.pages.create_link'), new_admin_page_path, :class=>"btn btn-default"
.btn.btn-link= switch_deleted_link
%section
  .row
    .col-md-8
      %table.table.table-hover.table-condensed
        %thead
          %tr
            %th
              %small.muted= Page.human_attribute_name(:url)
            %th.col-md-6
              %small.muted= Page.human_attribute_name(:name)
            %th
              %small.muted= Page.human_attribute_name(:state)
            %th
              %small.muted.pull-right= t "admin.actions"
        %tbody
          - @pages.each do |page|
            %tr{ class: page_html_class(page) }
              %td
                %span= page.url
              %td
                %span= link_to page_name(page), admin_page_path(page)
              %td
                %span= t("admin.pages.state.#{page.current_state}")
              %td
                %div.btn-group.btn-group-xs.pull-right
                  = icon_link_to :remove, delete_admin_page_path(page)

